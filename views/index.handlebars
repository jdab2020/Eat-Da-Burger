<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Let's Eat-Da-Burger!</h1>
            <p>Manage your burger cravings!</p>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul>
                {{#each burgers}}
                <li>
                    <p><span class="label">ID:</span> {{this.id}}</p>
                    <p><span class="label">Name:</span> {{this.id}}</p>
                    <button data-id="{{this.id}}" class="devour">Devour!</button>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <ul>
                {{#each devoured}}
                <li>
                    <p><span class="label">ID:</span> {{this.id}}</p>
                    <p><span class="label">Name:</span> {{this.id}}</p>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>